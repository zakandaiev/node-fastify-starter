{
  "name": "node-fastify-starter",
  "version": "1.3.2",
  "private": false,
  "author": "Oleksandr Zakandaiev",
  "authorUrl": "https://github.com/zakandaiev",
  "description": "Node.js Fastify Starter is a boilerplate kit for building modern backend applications",
  "keywords": [
    "nodejs",
    "fastify",
    "mysql",
    "swagger",
    "docker",
    "starter",
    "boilerplate",
    "kit",
    "javascript",
    "js",
    "esm"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zakandaiev/node-fastify-starter"
  },
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "imports": {
    "#root/*": "./*",
    "#core/*": "./core/*",
    "#src/*": "./src/*"
  },
  "scripts": {
    "dev": "nodemon ./index.js | pino-pretty",
    "start": "node ./index.js",
    "lint": "eslint ./",
    "lint:fix": "eslint ./ --fix",
    "migration:up": "node ./core/migration.js --direction=up",
    "migration:down": "node ./core/migration.js --direction=down"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@eslint/js": "^9.39.2",
    "eslint": "^9.39.2",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.32.0",
    "nodemon": "^3.1.11",
    "pino-pretty": "^13.1.3"
  },
  "dependencies": {
    "@fastify/autoload": "^6.3.1",
    "@fastify/cookie": "^11.0.2",
    "@fastify/cors": "^11.2.0",
    "@fastify/helmet": "^13.0.2",
    "@fastify/jwt": "^10.0.0",
    "@fastify/multipart": "^9.4.0",
    "@fastify/mysql": "^5.0.2",
    "@fastify/static": "^9.0.0",
    "@fastify/swagger": "^9.7.0",
    "@fastify/swagger-ui": "^5.2.5",
    "@fastify/under-pressure": "^9.0.3",
    "bcryptjs": "^3.0.3",
    "dotenv": "^17.2.4",
    "fastify": "^5.7.4",
    "globals": "^17.3.0",
    "minimist": "^1.2.8"
  },
  "overrides": {
    "eslint": "^9.39.2"
  }
}
